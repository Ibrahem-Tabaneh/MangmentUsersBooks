@using Bl.ViewModel

@model ViewModelHomePage
<!-- Popular -->

<div class="popular page_section">
	<div class="container">
		<div class="row">
			<div class="col">
				<div class="section_title text-center">
					<h1>Popular Courses</h1>
				</div>
			</div>
		</div>

		<div class="row course_boxes">

			<!-- Popular Course Item -->
			@foreach (var item in Model.books)
			{
				<div class="col-lg-4 course_box">
					<div class="card">
						<img class="card-img-top" src="~/images/Book/@item.ImageName">
						<div class="card-body text-center">
							<div class="card-title"><a href="courses.html">@item.Name</a></div>
							<div class="card-text">@item.Description</div>
						</div>
						<div class="price_box d-flex flex-row align-items-center">
							<div class="course_author_image">
								<img src="~/images/Author/@item.ImageAuthor">
							</div>
							<div class="course_author_name">@item.Author<span>Author</span></div>
							<div class="download_button d-flex flex-column align-items-center justify-content-center">
								<a href="@Url.Content($"~/PdfFiles/pdf/{item.FileName}")" class="btn btn-primary" download>Download PDF</a>
							</div>
						</div>
					</div>
				</div>
			}


		</div>
	</div>
</div>

